#!/usr/bin/env bash

set -euo pipefail

docker buildx \
  build \
  --push \
  -t "${REPOSITORY}:${GETSSL_VERSION}-route53" \
  -t "${REPOSITORY}:${GETSSL_VERSION}-route53-${TAG_TIMESTAMP}" \
  --build-arg "FROM_TAG=${GETSSL_VERSION}" \
  --platform linux/amd64,linux/arm64 \
  -f route53/Dockerfile \
  .
