#!/usr/bin/env bash

set -euo pipefail

docker buildx \
  build \
  --push \
  -t "${REPOSITORY}:${GETSSL_VERSION}-route53" \
  -t "${REPOSITORY}:${GETSSL_VERSION}-route53-$(date +%Y-%m-%d-$(git rev-parse --short HEAD))" \
  --build-arg "FROM_TAG=${GETSSL_VERSION}" \
  --platform ${PLATFORMS} \
  -f route53/Dockerfile \
  .
